<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movie_collection_poster"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/movie_collection_title"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/movie_collection_poster"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/movie_collection_year"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_collection_title"
        android:layout_toEndOf="@id/movie_collection_poster"
        android:layout_width="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="6dp"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@color/white" />
</RelativeLayout>